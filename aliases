alias cls="clear"
alias ga="git add"
alias gs="git status"
alias gl="git log"
alias gb="git branch"
alias gc="git checkout"
alias gd="git diff"
alias gcb="git checkout -b"
alias gcm="git commit -m"
alias gcn="git commit --no-verify -m"
alias gca="git commit --amend"
alias grm="git checkout master; git pull origin master; git checkout - ;git rebase master"
alias gsh="git show"
alias gsf="git show --name-only"
alias gcp="git rev-parse --abbrev-ref HEAD | pbcopy"
alias gpom="git pull origin master"
alias gsl="git stash list"
alias gsm="git stash save --message"

alias nzsh="nano ~/.zshrc"
alias szsh="source ~/.zshrc"
alias czsh="cat ~/.zshrc"

alias alert="tput bel"

# Testing
alias yt="yarn test"
alias ytu="yarn test -u"
alias ytf="yarn test --collectCoverage=false"
