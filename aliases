alias cls="clear"
alias ga="git add"
alias gs="git status"
alias gl="git log"
alias gb="git branch"
alias gc="git checkout"
alias gcb="git checkout -b"
alias gcm="git commit -m"
alias gcn="git commit --no-verify -m"
alias gca="git commit --amend"
alias gsh="git show"
alias gsf="git show --name-only"
alias gcp="git rev-parse --abbrev-ref HEAD | pbcopy"
alias rest="exec zsh -l"
alias alert="tput bel"

# Testing
alias yt="yarn test"
alias ytu="yarn test -u"
alias ytf="yarn test --collectCoverage=false"
